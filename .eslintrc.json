{
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},

	"extends": "eslint:recommended",

	"globals": {
		"JSPath": 1
	},

	"rules": {
		"comma-dangle": [
			2,
			"only-multiline"
		],

		"no-useless-escape": 0,
		"no-constant-condition": 1,
		"no-mixed-spaces-and-tabs": 0,

		"no-unused-vars": [
			1,
			{"vars": "local", "args": "after-used"}
		],

		"quotes": [
			2,
			"single"
		]
	}
}
